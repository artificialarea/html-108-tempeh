{
    "name": "html-108-server",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.js",
    "scripts": {
        "test": "mocha --require test/setup.js --watch",
        "dev": "nodemon src/server.js",
        "migrate": "postgrator --config postgrator-config.js",
        "migrate:test": "env NODE_ENV=test npm run migrate",
        "migrate:production": "env SSL=true NODE_TLS_REJECT_UNAUTHORIZED=0 DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
        "start": "nodemon src/server.js",
        "predeploy": "npm audit",
        "deploy": "git push heroku master",
        "postdeploy": "npm run migrate:production"
    },
    "keywords": [],
    "engines": {
        "node": "12.21.0"
    },
    "author": "Sacha Sedriks <sachased@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "helmet": "^4.0.0",
        "knex": "^0.21.2",
        "morgan": "^1.9.1",
        "pg": "^7.9.0",
        "postgrator-cli": "^3.2.0",
        "uuid": "^8.3.0",
        "winston": "^3.3.3",
        "xss": "^1.0.3"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "mocha": "^8.1.0",
        "nodemon": "^2.0.4",
        "supertest": "^3.3.0"
    }
}
